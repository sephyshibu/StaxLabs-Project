{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "application/**/*.ts",
    "domain/**/*.ts",
    "infrastructure/**/*.ts",
    "server/**/*.ts",
    "config/**/*.ts",
    "utils/**/*.ts",
    "interface/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
